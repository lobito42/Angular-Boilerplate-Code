# Environment Configuration
# Diese Datei wird automatisch von setup-script zu .env kopiert

NODE_ENV=development
PORT=3000

# Datenbank: sqlite, mongodb, oder postgresql
DB_TYPE=sqlite

# SQLite (Standard - keine Installation n√∂tig)
SQLITE_DB_PATH=./data/boilerplate.db

# MongoDB (wenn DB_TYPE=mongodb)
MONGODB_URI=mongodb://localhost:27017/boilerplate

# PostgreSQL (wenn DB_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=boilerplate

# CORS
CORS_ORIGIN=http://localhost:4200
